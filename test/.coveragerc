[run]
branch = True
#relative_files = True

omit =
    # Omit Antlr-generated parser templates
    */systemrdl/parser/SystemRDL*

    # Omit files autogenerated by speedy-antlr
    */systemrdl/parser/sa_systemrdl.py

    # Is not imported at runtime
    */systemrdl/rdltypes/typing.py

[paths]
source =
    ../systemrdl/
    */site-packages/*/systemrdl
    */site-packages/systemrdl

[report]
exclude_lines =
    pragma: no cover
    raise RuntimeError
    raise NotImplementedError
    msg.fatal
    msg.error
    if TYPE_CHECKING:

precision = 1
